<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_color_background"
        android:elevation="50dp">

        <ImageView
            android:id="@+id/news_item_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_coin"
            android:background="@drawable/curve_conner_background"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/news_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="3"
            android:padding="4dp"
            android:text="Title"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/news_item_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/source_item_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="4dp"
            android:text="Source : Cryptopolitan"
            android:textAlignment="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/news_title_tv"
            app:layout_constraintStart_toEndOf="@id/news_item_iv" />

    <TextView
        android:id="@+id/timeStamp_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/roboto_light"
        android:padding="4dp"
        android:text="Thu, 29 Jul 2021"
        android:textAlignment="center"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/source_item_tv"
        app:layout_constraintStart_toEndOf="@id/news_item_iv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

